<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_two"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/textosNormales"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textosNormales"
                android:layout_marginEnd="@dimen/textosNormales"
                android:elevation="@dimen/margen10dp"
                app:cardCornerRadius="@dimen/margen10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/textosNormales"
                        android:elevation="@dimen/textosNormales"
                        app:cardCornerRadius="100dp">

                        <ImageView
                            android:id="@+id/idPhotoUser"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_person"
                            app:tint="@color/black" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/idNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textColor="@color/blackmode"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idIdentificacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textColor="@color/blackmode"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_margin="@dimen/margen10dp"
                        android:background="@color/verdeAsproaca" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:layout_marginEnd="@dimen/margen10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/icono32dp"
                                android:layout_height="@dimen/icono32dp"
                                android:layout_marginEnd="@dimen/margen10dp"
                                android:src="@drawable/email" />

                            <TextView
                                android:id="@+id/idCorreo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text=""
                                android:textColor="@color/blackmode"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:layout_marginEnd="@dimen/margen10dp"
                            android:layout_marginBottom="@dimen/icono32dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/icono32dp"
                                android:layout_height="@dimen/icono32dp"
                                android:layout_marginEnd="@dimen/margen10dp"
                                android:src="@drawable/user" />

                            <TextView
                                android:id="@+id/idTelefono"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text=""
                                android:textColor="@color/blackmode"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textosNormales"
                android:layout_marginTop="@dimen/textosNormales"
                android:layout_marginEnd="@dimen/textosNormales"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/idBtnActivar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margen10dp"
                    app:cardCornerRadius="@dimen/margen10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/verdeAsproaca"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margen10dp">

                        <ImageView
                            android:layout_width="@dimen/icono32dp"
                            android:layout_height="@dimen/icono32dp"
                            android:src="@drawable/ic_update" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:text="Activar actualizaciones"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.slidingpanelayout.widget.SlidingPaneLayout
                    android:layout_width="@dimen/margen10dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/idBtnDesacticar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margen10dp"
                    app:cardCornerRadius="@dimen/margen10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/error"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margen10dp">

                        <ImageView
                            android:layout_width="@dimen/icono32dp"
                            android:layout_height="@dimen/icono32dp"
                            android:src="@drawable/ic_update" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:text="Desactivar Actualizaciones"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:alpha=".5"
                android:layout_marginStart="@dimen/textosNormales"
                android:layout_marginEnd="@dimen/textosNormales"
                android:layout_marginBottom="@dimen/margen10dp"
                android:layout_marginTop="@dimen/margen10dp"
                android:background="@color/verdeAsproaca"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/textosNormales"
                android:layout_marginEnd="@dimen/textosNormales"
                android:layout_marginBottom="@dimen/textosNormales"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/idBtnActivarModificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margen10dp"
                    app:cardCornerRadius="@dimen/margen10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/verdeAsproaca"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margen10dp">

                        <ImageView
                            android:layout_width="@dimen/icono32dp"
                            android:layout_height="@dimen/icono32dp"
                            android:src="@drawable/ic_update" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:text="Activar Modificaciones"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.slidingpanelayout.widget.SlidingPaneLayout
                    android:layout_width="@dimen/margen10dp"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/idBtnDesacticarModificacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="@dimen/margen10dp"
                    app:cardCornerRadius="@dimen/margen10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/error"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/margen10dp">

                        <ImageView
                            android:layout_width="@dimen/icono32dp"
                            android:layout_height="@dimen/icono32dp"
                            android:src="@drawable/ic_update" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margen10dp"
                            android:text="Desactivar Modificaciones"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/idBtnbInfo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="@dimen/margen10dp"
                android:layout_marginBottom="@dimen/margen10dp"
                android:src="@drawable/info" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>